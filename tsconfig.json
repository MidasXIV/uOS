{
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "outDir": "./dist",
    "pretty": true,
    "rootDirs": ["./src"],
    "strict": true,
    "target": "ES2022",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"]
}
